/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 25px;
  font-weight: bold;
  margin-bottom: 20px;
  margin-left: 30px;
}

.section-description {
  font-size: 14px;
  font-weight: normal;
  margin-bottom: 30px;
  margin-left: 30px;
}


.container {
  display: flex;
  flex-direction: column;
  height: 100vh; 
}

.content {
  flex: 1; 
  width: 100%;
  padding: 20px;
  overflow-y: auto; 
}